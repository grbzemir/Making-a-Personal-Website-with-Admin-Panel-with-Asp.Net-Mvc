@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel Login</title>
    <link rel="stylesheet" href="~/WebAdminPanelLoginn/style.css">
</head>
<body>

    <div class="container">
        <div class="contact-form">
            <img src="~/WebAdminPanelLoginn/images/Admin.jpg" class="admin-image">
            <h2>Admin Login</h2>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))

            {
                <div class="txtb">
                    <input type="text" name="KullaniciAdi" placeholder="Username">
                </div>
                <div class="txtb">
                    <input type="password" name="Sifre" placeholder="Password">
                </div>
                <input type="submit" class="logbtn" value="Login">
            }
        </div>

    </div>

</body>
</html>